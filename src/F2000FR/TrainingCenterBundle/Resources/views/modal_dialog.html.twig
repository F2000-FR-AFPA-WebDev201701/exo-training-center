<div class="modal-dialog {% if modal_size is defined %}{{modal_size}}{% endif %}" role="document">
    <div class="modal-content">
        {% if action is defined and form is defined %}
            {{ form_start(form, {'action' : action, 'class' : 'pagination-centered buttons'}) }}
        {% endif %}
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">{{ title }}</h4>
        </div>
        <div class="modal-body">
            {% if 'html.twig' in subview %}
                {% include subview %}
            {% else %}
                {{ subview }}
            {% endif %}
        </div>
        <div class="modal-footer">
            {% if action is defined %}
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn {% if btn_type is defined %}{{btn_type}}{% else %}btn-primary{% endif %}">
                    {{ btn_label }}
                </button>
            {% elseif btn_label is defined %}
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ btn_label }}</button>
            {% endif %}
        </div>
        {% if action is defined %}
            </form>
        {% endif %}
    </div>
</div>